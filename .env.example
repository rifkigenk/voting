# MPS Voting Application - Environment Variables
# Copy this file to .env and update values for your environment

# Database Configuration
DATABASE_HOST=localhost
DATABASE_USER=mps_voting
DATABASE_PASSWORD=mps_voting_2026
DATABASE_NAME=mps_voting
DATABASE_PORT=3306

# Environment
ENVIRONMENT=development
# Options: development, staging, production

# Application Settings
APP_NAME=MPS Elections 2026
APP_VERSION=1.0.0
TIMEZONE=Asia/Jakarta

# Wasmer Edge (if deploying to Wasmer)
WASMER_APP_NAME=mps-voting
WASMER_USERNAME=your_username

# Admin Settings
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@mps.sch.id

# Security
SESSION_TIMEOUT=1800
# Change these in production!
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# API Settings
API_RATE_LIMIT=100
API_TIMEOUT=30

# Email (if needed for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Logging
LOG_LEVEL=warning
# Options: debug, info, warning, error

# Feature Flags
ENABLE_FACE_RECOGNITION=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_API_EXPORT=true
